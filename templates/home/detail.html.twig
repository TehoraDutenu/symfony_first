{# On doit récupérer la base #}
{% extends 'base.html.twig' %}

{# Redéfinir le titre de la page #}
{% block title %}Détail du jeu{% endblock %}

{# On ouvre le block body #}
{% block body %}

<h2> {{ game.title }} </h2>

<div class="d-flex flex-wrap col-sm-10 justify-content-center mt-5">
    <div class="col-6">
        <img src="/images/games/{{game.imagePath}}" alt="{{game.title}}" class="img-fluid">
    </div>
    <div class="col-6">
    {% for console in consoles %}
        <span class="badge rounded-pill bg-primary">{{console.label}}</span>
    {% endfor %}
        <p>Synopsis : {{game.description}}</p>
        <p>Date de sortie : {{game.releaseDate|date('d/m/Y')}}</p>
        <p>Note Médias : {{game.mediaNote}}/20</p>
        <p>Note utilisateur : {{game.userNote}}/20</p>
        <p>Prix : {{game.price !=0 ? (game.price/100)|number_format(2, ',', ' ')~' €' : 'Gratuit'}}</p>
        <div class="d-flex align-items-center">
            <p>Age : {{game.label}}+</p>
            <img src="/images/pegi/{{game.imgPegi}}" alt="{{game.label}}+" class="img-fluid ms-3" style="width: 40px; height: 40px;">
        </div>
    </div>
</div>

{% endblock %}